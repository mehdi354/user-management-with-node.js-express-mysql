<form action="/add-new-user" method="POST">
    <div class="form-group mb-2">
        <label for="exampleInputEmail1">First Name</label>
        <input type="text" class="form-control" name="first_name" id="exampleInputEmail1" 
        value="<%= user.first_name %>"
        readonly/>
    </div>

    <div class="form-group mb-2">
        <label for="exampleInputEmail1">Last Name</label>
        <input type="text" class="form-control" name="last_name" id="exampleInputEmail1" 
        value="<%= user.last_name %>"
        readonly/>
    </div>

    <div class="form-group mb-2">
        <label for="exampleInputEmail1">Email</label>
        <input type="text" class="form-control" name="email" id="exampleInputEmail1" 
        value="<%= user.email %>"
        readonly/>
    </div>

    <div class="form-group mb-2">
        <label for="exampleInputEmail1">Contact</label>
        <input type="text" class="form-control" name="phone" id="exampleInputEmail1" 
        value="<%= user.phone %>"
        readonly/>
    </div>

    <div class="form-group mb-2">
        <label for="exampleInputEmail1">Comment</label>
        <input type="text" class="form-control" name="comments" id="exampleInputEmail1" 
        value="<%= user.comments %>"
        readonly/>
    </div>

    <div class="form-group mb-2">
        <label for="exampleInputEmail1">status</label>
        <input type="text" class="form-control" name="status" id="exampleInputEmail1" 
        value="<%= user.status %>"
        readonly />
    </div>
</form>